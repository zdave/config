export PATH="$(python3 - ~/bin ~/.ghcup/bin ~/.cabal/bin ~/.cargo/bin ~/go/bin <<EOF
import collections, os, sys
print(':'.join(collections.OrderedDict.fromkeys(
    [dir for dir in sys.argv[1:] if os.path.isdir(dir)] +
    os.environ['PATH'].split(':'))))
EOF
)"

export EDITOR=vim
export PYTHONSTARTUP=~/.python-startup.py

if [ -f /usr/local/share/brcm-vpn/brcm-via-vpn.pac ]; then
    export auto_proxy="data:application/x-javascript-config;base64,$(base64 -w0 /usr/local/share/brcm-vpn/brcm-via-vpn.pac)"
fi
